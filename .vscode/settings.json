{
    "eslint.enable": true,
    "eslint.alwaysShowStatus": true,    
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true
    },
    "files.associations": {
        ".*rc": "ini",
        ".env*": "ini",
        "Dockerfile*": "dockerfile"
    },    
    "editor.tabSize": 2,
    "python.pythonPath": "${workspaceFolder}/venv/bin/python",
    "python.unitTest.pyTestEnabled": true,
}